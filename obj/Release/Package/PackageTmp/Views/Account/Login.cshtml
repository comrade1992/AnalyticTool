@model AnalyticTool.Models.UserAccount

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal login-form">
        <div>
            <img src="~/Content/img/loginIcon.png" class="login-img"/>
            <h4 class="login-text">Login</h4>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label username-div">   
            <input class="mdl-textfield__input" data-val="true" data-val-required="Username is required!" id="Username" name="Username" type="text" value="">
            <label class="mdl-textfield__label" for="Username">Username</label>
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label password-div">
            <input class="mdl-textfield__input" data-val="true" data-val-required="Password is required!" id="UserPassword" name="UserPassword" type="password" value="">
            <label class="mdl-textfield__label" for="UserPassword">Password</label>
            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent col-md-7" /><br /><br />
                <a href="/Account/Register">Register now</a>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
    <script src="~/Content/js/app/login.js"></script>    
}
@section Styles{
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
}